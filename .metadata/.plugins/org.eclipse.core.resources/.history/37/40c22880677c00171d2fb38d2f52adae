/*
 * Do-While Loops!
 */

#include <iostream>
using namespace std;

int main(){

	const string password = "hello";

	string input;

	do{
		cout << "Access denied." << endl;

		cout << "Enter your password: " << flush;
		cin >> input;
	}while(input!=password);

	cout << "Password accepted.";

	return 0;

}
