#include <iostream>
using namespace std;

int main() {

	cout << "\n1. Add new record." << endl;
	cout << "2. Delete record." << endl;
	cout << "3. View record." << endl;
	cout << "4. Search record." << endl;
	cout << "5. Quit.\n" << endl;

	cout << "Enter your selection: " << flush;
	int value;
	cin >> value;

	if(value == 5){
		cout << "The program has successfully quit." << endl;
	}
	if(value < 3){
		cout << "Access denied. Insufficient privileges." << endl;
	}

	return 0;
}
