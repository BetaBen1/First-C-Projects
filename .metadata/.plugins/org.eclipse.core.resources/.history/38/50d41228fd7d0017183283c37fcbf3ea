/*
 * Arrays!
 */

#include <iostream>
using namespace std;

int main(){

	int values[3];

	values[0] = 88;
	values[1] = 123;
	values[2] = 7;

	cout << "Array of Integers" << endl;
	cout << "=================" << endl;
	cout << values[0] << endl;
	cout << values[1] << endl;
	cout << values[2] << endl;

	double numbers[4] = {4.5, 2.3, 7.2, 8.1};

	cout << endl << "Array of Doubles" << endl;
	cout << "================" << endl;
	cout << numbers[0] << endl;

	return 0;
}
